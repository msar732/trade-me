        ).order_by(Listing.created_at.desc()).all()
        
        return render_template_string(PRODUCTION_HTML_TEMPLATE, 
                                    page='my-listings',
                                    user_listings=user_listings,
                                    user_session=session)
        
    except Exception as e:
